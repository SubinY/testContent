# Global provider selection: auto | openai | deepseek | modelgate | local
LLM_PROVIDER=auto
RUN_MODE=api
NEXT_PUBLIC_RUN_MODE=api

# Show auxiliary controls (debug panels, switches): true/false
NEXT_PUBLIC_SHOW_AUX_CONTROLS=true

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# DeepSeek (OpenAI-compatible API)
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ModelGate - 文字类（图二，OpenAI 兼容）https://mg.aid.pub/v1
MODELGATE_API_KEY=
MODELGATE_BASE_URL=https://mg.aid.pub/v1
MODELGATE_MODEL=gpt-4

# ModelGate - 图像类（图一）https://mg.aid.pub/api/v1/images/generations
MODELGATE_IMAGE_API_KEY=
MODELGATE_IMAGE_URL=https://mg.aid.pub/api/v1/images/generations
MODELGATE_IMAGE_MODEL=Nano-Banana
MODELGATE_IMAGE_SIZE=1024x1024
MODELGATE_IMAGE_OUTPUT_FORMAT=png

# Nano Banana (image generation, legacy/fallback)
NANO_BANANA_API_KEY=
NANO_BANANA_BASE_URL=https://grsai.dakka.com.cn
NANO_BANANA_MODEL=nano-banana-fast
NANO_BANANA_ASPECT_RATIO=auto
NANO_BANANA_IMAGE_SIZE=1K
